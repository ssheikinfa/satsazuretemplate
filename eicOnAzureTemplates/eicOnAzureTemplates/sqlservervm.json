{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storagetestType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "vmName": {
      "type": "string",
      "defaultValue":"dvm"
      "minLength": 1
    },
    "vmAdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "vmAdminPassword": {
      "type": "securestring"
    }
},
  "variables": {
    "storageName": "[concat('storage', uniqueString(resourceGroup().id))]",
    "publicIpAddressName": "[concat('publicip',uniqueString(resourceGroup().id))]",
    "vmVnetName": "[concat('vnet',uniqueString(resourceGroup().id))]",
    "vmNicName": "[concat(parameters('vmName'), 'NetworkInterface')]",
    "vmStorageAccountContainerName": "vhds",
    "vmNsgName": "vmNsgName",

    "publicIpAddressType": "Dynamic",
    "vnetPrefix": "10.0.0.0/16",
    "vnetSubnetName": "Subnet",
    "vnetSubnetPrefix": "10.0.0.0/24",
    "vmVnetID": "[resourceId('Microsoft.Network/virtualNetworks', variables('vmVnetName'))]",
    "vmSubnetRef": "[concat(variables('vmVnetID'), '/subnets/', variables('vnetSubnetName'))]",

    "vmImagePublisher": "MicrosoftSQLServer",
    "vmImageOffer": "SQL2016SP1-WS2016",
    "vmOSDiskName": "linuxvmOSDisk",
    "vmOSVersion": "Enterprise",
    "vmVmSize": "Standard_D2_v2"
  },
  "resources": [
    {
      "apiVersion": "2017-06-01",
      "name": "[variables('publicIpAddressName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "location": "[resourceGroup().location]",
      "properties": {
        "publicIPAllocationMethod": "[variables('publicIpAddressType')]",
        "dnsSettings": {
          "domainNameLabel": "[variables('publicIpAddressName')]"
        }
      }
    },
    {
      "name": "[variables('vmVnetName')]",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [],
      "tags": {
        "displayName": "vnet"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[variables('vnetPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[variables('vnetSubnetName')]",
            "properties": {
              "addressPrefix": "[variables('vnetSubnetPrefix')]"
            }
          }
        ]
      }
    },
    {
      "name": "[variables('vmNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-10-01",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', variables('vmVnetName'))]"
      ],
      "tags": {
        "displayName": "vmNic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('publicIpAddressName'))]"
              },
              "subnet": {
                "id": "[variables('vmSubnetRef')]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('vmNsgName'))]"
        }
      }
    },
    {
      "apiVersion": "2016-10-01",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[variables('vmNsgName')]",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "NetworkSecurityGroup"
      },
      "properties": {
        "securityRules": [
          {
            "name": "InformaticaService",
            "properties": {
              "description": "Enabling ports required for Informatica.",
              "protocol": "TCP",
              "sourcePortRange": "*",
              "destinationPortRange": "1433",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          },
          {
            "name": "SSH",
            "properties": {
              "description": "Enabling port for SSH",
              "protocol": "TCP",
              "sourcePortRange": "*",
              "destinationPortRange": "22",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 110,
              "direction": "Inbound"
            }
          },
          {
            "name": "RDP",
            "properties": {
              "description": "Enabling port for RDP",
              "protocol": "TCP",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 111,
              "direction": "Inbound"
            }
          }
        ]
      }
      },
      {
            "name": "[variables('storageName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "location": "[resourceGroup().location]",
            "apiVersion": "2016-01-01",
            "sku": {
              "name": "[parameters('storagetestType')]"
            },
            "dependsOn": [],
            "tags": {
              "displayName": "storagetest"
            },
            "kind": "Storage"
          },
          {
            "name": "[parameters('vmName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [
              "[resourceId('Microsoft.Storage/storageAccounts',variables('storageName'))]",
              "[resourceId('Microsoft.Network/networkInterfaces', variables('vmNicName'))]"
            ],
            "tags": {
              "displayName": "linuxvm"
            },
            "properties": {
              "hardwareProfile": {
                "vmSize": "[variables('vmVmSize')]"
              },
              "osProfile": {
                "computerName": "[parameters('vmName')]",
                "adminUsername": "[parameters('vmAdminUsername')]",
                "adminPassword": "[parameters('vmAdminPassword')]"
              },
              "storageProfile": {
                "imageReference": {
                  "publisher": "[variables('vmImagePublisher')]",
                  "offer": "[variables('vmImageOffer')]",
                  "sku": "[variables('vmOSVersion')]",
                  "version": "latest"
                },
                "osDisk": {
                  "name": "infaDBOSDisk",
                  "vhd": {
                    "uri": "[concat(reference(resourceId('Microsoft.Storage/storageAccounts', variables('storageName')), '2016-01-01').primaryEndpoints.blob,'vhds/' ,parameters('vmName'), variables('vmOSDiskName'), '.vhd')]"
                  },
                  "caching": "ReadWrite",
                  "createOption": "FromImage"
                }
              },
              "networkProfile": {
                "networkInterfaces": [
                  {
                    "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('vmNicName'))]"
                  }
                ]
              }
            },
            "resources": [
              {
                "name": "ScriptExtDB",
                "type": "extensions",
                "location": "[resourceGroup().location]",
                "apiVersion": "2016-03-30",
                "dependsOn": [
                  "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]"
                ],
                "tags": {
                  "displayName": "informaticadbextension"
                },
                "properties": {
                  "publisher": "Microsoft.Compute",
                  "type": "CustomScriptExtension",
                  "typeHandlerVersion": "1.7",
                  "autoUpgradeMinorVersion": false,
                  "settings": {
                    "fileUris": [
                      "https://raw.githubusercontent.com/ssheikinfa/azuretemplate-rearch/master/infapc1011hf2/databaseconfiguration.ps1"
                    ]
                  },
                  "protectedSettings": {
                    "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -file ', 'databaseconfiguration.ps1', ' -osUsername \"', parameters('vmAdminUserName'), '\" -osPassword \"', parameters('vmAdminPassword'), '\" -dbUsername \"', 'dbuser', '\" -dbPassword \"', 'infa@1234', '\" -pcrsdbName \"', 'pcrsdb' , '\" -mrsdbName \"','mrsdb', '\" -cmsdbName \"', 'cmsdb', '\" -disdbName \"', 'disdb', '\" -satsdbName \"', 'satsdb', '\" -tdmdbName \"', 'tdmdb' ,'\"')]"
                  }
                }
              },
              {
                "apiVersion": "2015-06-15",
                "type": "Microsoft.Compute/virtualMachines/extensions",
                "name": "[concat(parameters('vmName'), '/SqlIaasExtension')]",
                "location": "[resourceGroup().location]",
                "dependsOn": [
                  "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]",
                  "ScriptExtDB"
                ],
                "properties": {
                  "type": "SqlIaaSAgent",
                  "publisher": "Microsoft.SqlServer.Management",
                  "typeHandlerVersion": "1.2",
                  "autoUpgradeMinorVersion": true,
                  "settings": {
                    "AutoTelemetrySettings": {
                      "Region": "[resourceGroup().location]"
                    },
                    "KeyVaultCredentialSettings": {
                      "Enable": false,
                      "CredentialName": ""
                    }
                  },
                  "protectedSettings": {
                    "SQLAuthUpdateUserName": "[parameters('vmAdminUserName')]",
                    "SQLAuthUpdatePassword": "[parameters('vmAdminPassword')]"
                  }
                }
              }
            ]
          }
        ],
        "outputs": {

        }
      }
